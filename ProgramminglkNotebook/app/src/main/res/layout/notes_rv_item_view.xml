<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#95A3ED"
    android:background="@drawable/custom_rectaingle_all_rounded"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tv_header_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="header"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#95A3ED"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="start"
        android:textStyle="italic"
        android:padding="8dp"
        android:textColor="@color/purple_500"
        android:backgroundTint="#C7CDED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_item"
        android:background="@drawable/custom_rectaingle_bottom_rounded"/>
</androidx.constraintlayout.widget.ConstraintLayout>